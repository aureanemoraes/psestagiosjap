<%- model_class = Estagio -%>
<div class="page-header">
  <h1>
    <%=
      t '.title',
        :default => [:'helpers.titles.new', 'New %{model}'],
        :model => model_class.model_name.human.titleize
    %>
  </h1>
</div>

<% if user_signed_in? %>
  <% if current_user.admin? or @estagios.blank? %>
    <p><%= render "estagios/navbar"%></p>
    <h1>Nova Inscrição</h1>
    <%= render :partial => 'form' %>
  <% else %>
    <p>Você já possui uma inscrição realizada.</p>
  <% end %>
<% else %>
  <p>Você precisa acessar seu perfil para realizar esta ação.</p>
<% end %>

